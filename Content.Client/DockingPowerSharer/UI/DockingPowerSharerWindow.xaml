<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">

    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Button Name="MVDischargeButton" Text="{Loc ui-power-sharer-discharge}" />
            <Button Name="HVDischargeButton" Text="{Loc ui-power-sharer-hv-discharge}" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Button Name="MVDrawButton" Text="{Loc ui-power-sharer-mv-draw}" />
            <Button Name="HVDrawButton" Text="{Loc ui-power-sharer-hv-draw}" />
        </BoxContainer>
    </BoxContainer>

</controls:FancyWindow>
